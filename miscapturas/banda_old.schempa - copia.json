{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/banda.schema.json",
    "title": "banda de musica",
    "description": "fue una banda musical de rock progresivo britanica fundada en 1977",
    "type": "object",
    "properties": {
        "group": { 
            "description": "Dire Straits",
            "type" : "String"
        },
       "description": {
           "description": "Descripcion de la banda",
           "type": "String"
        },
        "email": {
            "description": "Correo de contacto universitario del alumno",
            "type": "String",
            "format": "email"
        },
        "foundation-year": {
            "description":"AÃ±o en el que se fundo la banda ",
            "type": "integer",
            "minimum": 1900,
            "maximum": 2022
        },

        "members": {
            "description": "Miembros que componen la banda",
            "type": "array",
            "items": {
                "type": "object"
            },
            "minItems":2,
            "uniqueItems":"true"
            
         },
        "albums": {
             "descripcion": "Albumes de la banda",
             "type": "array",
             "items": {
                 "type": "object"
             }, 
             "minItems": 1,
             "uniqueItems": "true"

         },
        "concerts": {
        
            "description": "Conciertos de la banda",
            "type": "array",
            "items": {
                "type": "object"
            },
            "minItems": 1,
            "uniqueItems": "true",
            "date": {
            "description": "fecha del concierto",
            "type": "string",
            "format": "date"
            
        }

    }
},
    
    "required": ["group", "description", "email", "foundation-year","members",  "albums", "concerts"]
}